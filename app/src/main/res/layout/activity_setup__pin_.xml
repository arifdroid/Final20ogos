        android:layout_height="60dp"
        android:background="@drawable/ic_pin_ring"
        android:ems="10"
        android:hint="1"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="1"

        android:paddingBottom="8dp"
        android:textAlignment="center"

        android:imeOptions="actionNext"

        android:textColor="@color/material_white_blue"
        android:textColorHighlight="@color/pink_main"
        android:textColorHint="@color/yellow_hint"
        app:layout_constraintBottom_toTopOf="@+id/guideline137"
        app:layout_constraintEnd_toStartOf="@+id/guideline140"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline136" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/regUser_pinCode_textViewiD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="pease setup 4 pin code now."
        android:textAlignment="center"


        android:textColor="@color/material_white_blue"

        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline143"
        app:layout_constraintEnd_toStartOf="@+id/guideline141"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/guideline130"
        app:layout_constraintTop_toTopOf="@+id/guideline142" />

    <Button
        android:id="@+id/regUser_pinCode_buttoniD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/gradient_blue_button"
        android:text="Set Code"
        android:textColor="@color/material_white_blue"
        app:layout_constraintBottom_toTopOf="@+id/guideline133"
        app:layout_constraintEnd_toStartOf="@+id/guideline135"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/guideline134"
        app:layout_constraintTop_toTopOf="@+id/guideline132" />

