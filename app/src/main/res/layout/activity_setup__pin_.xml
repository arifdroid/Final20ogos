<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".fingerPrint_Login.register.setup_pin_code.Setup_Pin_Activity">

    <EditText
        android:id="@+id/regUser_editNumber_2_iD"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_pin_ring"
        android:ems="10"
        android:hint="1"
        android:digits="0123456789"
        android:inputType="number"
        android:imeOptions="actionNext"

        android:paddingBottom="8dp"

        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/material_white_blue"
        android:textColorHighlight="@color/pink_main"
        android:textColorHint="@color/yellow_hint"
        app:layout_constraintBottom_toTopOf="@+id/guideline137"
        app:layout_constraintEnd_toStartOf="@+id/guideline138"
        app:layout_constraintStart_toStartOf="@+id/guideline139"
        app:layout_constraintTop_toTopOf="@+id/guideline136" />

    <EditText
        android:id="@+id/regUser_editNumber_1_iD"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_pin_ring"
        android:ems="10"
        android:hint="1"
        android:maxLength="1"
        android:digits="0123456789"
        android:inputType="number"
        android:imeOptions="actionNext"

        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textColor="@color/material_white_blue"
        android:textColorHighlight="@color/pink_main"
        android:textColorHint="@color/yellow_hint"
        app:layout_constraintBottom_toTopOf="@+id/guideline137"
        app:layout_constraintEnd_toStartOf="@+id/guideline139"
        app:layout_constraintStart_toStartOf="@+id/guideline130"
        app:layout_constraintTop_toTopOf="@+id/guideline136" />

    <EditText
        android:id="@+id/regUser_editNumber_4_iD"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_pin_ring"
        android:ems="10"
        android:hint="1"
        android:digits="0123456789"
        android:imeOptions="actionNext"

        android:inputType="number"
        android:textAlignment="center"

        android:maxLength="1"

        android:paddingBottom="8dp"
        android:textColor="@color/material_white_blue"
        android:textColorHighlight="@color/pink_main"
        android:textColorHint="@color/yellow_hint"
        app:layout_constraintBottom_toTopOf="@+id/guideline137"
        app:layout_constraintEnd_toStartOf="@+id/guideline141"
        app:layout_constraintStart_toStartOf="@+id/guideline140"
        app:layout_constraintTop_toTopOf="@+id/guideline136" />

    <EditText
        android:id="@+id/regUser_editNumber_3_iD"
